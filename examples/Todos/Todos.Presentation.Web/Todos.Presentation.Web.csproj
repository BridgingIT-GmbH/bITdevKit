  </ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Presentation.Web.Client\Presentation.Web.Client.csproj" />
    <ProjectReference Include="..\..\..\src\Presentation.Web\Presentation.Web.csproj" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
