@page "/culture"
@inject IStringLocalizer<Global> localizer

<PageTitle>Culture</PageTitle>
<MudText Typo="Typo.h3" GutterBottom="true">Culture</MudText>
<MudText Class="mb-4">CurrentCulture: @CultureInfo.CurrentCulture</MudText>

<MudText Typo="Typo.h5" GutterBottom="true">Rendered values</MudText>
<ul>
    <li><b>Date</b>: @dt</li>
    <li><b>Date o</b>: @dt.ToString("o")</li>
    <li><b>Number</b>: @number.ToString("N2")</li>
</ul>

<MudText Typo="Typo.h5" GutterBottom="true">
    <code>&lt;input&gt;</code> elements that don't set a <code>type</code>
</MudText>
<p>
    The following <code>&lt;input&gt;</code> elements use
    <code>CultureInfo.CurrentCulture</code>.
</p>

<ul>
    <li>
        <label>
            <b>Date:</b> <input @bind="dt"/>
        </label>
    </li>
    <li>
        <label>
            <b>Number:</b> <input @bind="number"/>
        </label>
    </li>
</ul>

<MudText Typo="Typo.h5" GutterBottom="true">
    <code>&lt;input&gt;</code> elements that set a <code>type</code>
</MudText>
<p>
    The following <code>&lt;input&gt;</code> elements use
    <code>CultureInfo.InvariantCulture</code>.
</p>

<ul>
    <li>
        <label>
            <b>Date:</b> <input type="date" @bind="dt"/>
        </label>
    </li>
    <li>
        <label>
            <b>Number:</b> <input type="number" @bind="number"/>
        </label>
    </li>
</ul>

<MudText Typo="Typo.h5" GutterBottom="true">Localization</MudText>
<ul>
    <li>
        <b>Text:</b> @localizer["Localization_Title"]
    </li>
</ul>

@code {
    private DateTime dt = DateTime.Now;
    private double number = 1999.69;
}